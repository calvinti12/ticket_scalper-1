<h1>
  Add a new event
</h1>


<hr>

<form action="/create_event" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="start_time">
      Start time
    </label>

    <input type="text" id="start_time" name="start_time" class="form-control">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="message_sent">
    <input id="message_sent" class="form-check-input" name="message_sent" type="checkbox">
    <label for="message_sent" class="form-check-label">
      Message sent
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create event
  </button>
</form>

<hr>

<a href="/events">
  Go back
</a>
