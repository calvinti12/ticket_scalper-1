<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Event #<%= @event.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/events" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @event.username %>
          <a href="/events/<%= @event.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit event
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @event.username %>
          <a href="/delete_event/<%= @event.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete event
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @event.username.present? %>
          <a href="/users/<%= @event.user_id %>">
            <%= @event.username.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Start time
      </dt>
      <dd>
        <%= @event.start_time %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @event.description %>
      </dd>

      <dt>
        Message sent
      </dt>
      <dd>
        <%= @event.message_sent %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@event.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@event.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

